<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/project_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/project_category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_below="@+id/project_name_text_view"
        android:layout_toLeftOf="@+id/project_complete_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/project_complete_checkbox" />

    <CheckBox
        android:id="@+id/project_complete_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/project_name_text_view"
        android:layout_alignParentRight="true"
        android:gravity="right"/>

    <TextView
        android:id="@+id/project_complete_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_complete_check_box"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="right"
        android:layout_alignBaseline="@+id/project_complete_checkbox"
        android:layout_alignBottom="@+id/project_complete_checkbox"
        android:layout_toLeftOf="@+id/project_complete_checkbox"
        android:layout_toStartOf="@+id/project_complete_checkbox"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />


</RelativeLayout>